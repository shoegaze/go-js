{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "preserveConstEnums": true,
    "outDir": "server/dist"
  },
  "include": [
    "server/src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}